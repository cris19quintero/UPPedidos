# ===================================
# UTPedidos Backend - Variables de Entorno
# ===================================

# Configuración del Servidor
NODE_ENV=development
PORT=5000

# Base de Datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_mysql
DB_NAME=UTPPEDIDOS
DB_CONNECTION_LIMIT=10
AUTO_CREATE_DB=false

# JWT Configuración
JWT_SECRET=utpedidos_jwt_secret_key_super_segura_2024
JWT_REFRESH_SECRET=utpedidos_refresh_secret_key_super_segura_2024
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# URLs Frontend (separadas por comas)
FRONTEND_URL_DEV=http://localhost:3000,http://localhost:5173
FRONTEND_URL_PROD=https://tu-app.vercel.app,https://utpedidos.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Configuración de Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password
EMAIL_FROM_NAME=UTPedidos
EMAIL_FROM_EMAIL=noreply@utpedidos.com

# Configuración de Archivos
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp
UPLOAD_PATH=./public/uploads/

# Configuración de Seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=utpedidos_session_secret_super_segura_2024

# URLs de Servicios Externos (opcional)
GOOGLE_CLOUD_PROJECT_ID=tu-proyecto-gcp
GOOGLE_CLOUD_STORAGE_BUCKET=utpedidos-images

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de Cache (opcional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Configuración de Notificaciones Push (opcional)
VAPID_PUBLIC_KEY=tu-vapid-public-key
VAPID_PRIVATE_KEY=tu-vapid-private-key
VAPID_SUBJECT=mailto:admin@utpedidos.com

# Configuración de Pagos (futuro)
STRIPE_SECRET_KEY=sk_test_tu_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret

# Configuración de Monitoreo
SENTRY_DSN=https://tu-sentry-dsn@sentry.io/proyecto

# Configuración de la UTP
UTP_API_URL=https://api.utp.ac.pa
UTP_API_KEY=tu_api_key_utp

# Horarios de las Cafeterías (en formato JSON)
CAFETERIA_HORARIOS={"desayuno":{"inicio":"07:00","fin":"09:30"},"almuerzo":{"inicio":"11:45","fin":"13:45"},"cena":{"inicio":"16:30","fin":"19:00"}}

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Configuración de Features Flags
FEATURE_NOTIFICATIONS=true
FEATURE_PAYMENT_INTEGRATION=false
FEATURE_LOYALTY_PROGRAM=false
FEATURE_REAL_TIME_TRACKING=true

# Configuración de Testing
TEST_DB_NAME=UTPPEDIDOS_TEST
TEST_JWT_SECRET=test_jwt_secret_123

# Configuración de Performance
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# ===================================
# Instrucciones de Configuración:
# ===================================

# 1. Copia este archivo como .env
# 2. Actualiza las variables con tus valores reales
# 3. NUNCA subas el archivo .env al repositorio
# 4. Asegúrate de que .env esté en .gitignore

# Comandos útiles:
# - Crear base de datos: npm run migrate
# - Poblar con datos de prueba: npm run seed
# - Ejecutar en desarrollo: npm run dev
# - Ejecutar en producción: npm start

# Seguridad:
# - Cambia TODOS los secrets antes de producción
# - Usa passwords fuertes para la base de datos
# - Habilita SSL en producción
# - Configura CORS apropiadamente